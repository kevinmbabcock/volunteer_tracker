<h3>Please fill out the form to add a volunteer</h3>

<form action="/volunteers" method="post">
  <div class="form-group">
    <label class="form-label" for="volunteerName">Volunteer Name:</label>
    <input class="form-control" id="volunteerName" name="volunteerName" type="text" placeholder="Volunteer Name" autofocus>
    <label for="project_id">Select a Project:</label>
    <select id='project_id' name='project_id' type='text'>
      <% @projects.each do |project| %>
        <option value="<%= project.id%>"> <%= project.name %> </option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn-primary">Submit</button>
</form>
